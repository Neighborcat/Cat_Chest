
@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Shared/_LayoutUserMain.cshtml";
}
    <form method="post" action="/User/ChangePwd">
        <div style="margin-top:50px">
            <div class="form-group">
                <label class="form-text">请输入原密码：</label>
                <input type="password" placeholder="原密码" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-text">请输入新密码：</label>
                <input type="password" name="LoginPwd" placeholder="新密码" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-text">请确认新密码：</label>
                <input type="password" placeholder="确认新密码" class="form-control" />
            </div>
            <a href="#" style="float:right">如果您忘记了密码，请点击这里</a>
        </div>
        <input type="submit" value="保存" class="btn btn-info" />
    </form>


