@{
    ViewBag.Title = "EidtInfo";
    Layout = "~/Views/Shared/_LayoutUserMain.cshtml";
}
@using Models
@model UserInfo
    <form method="post" action="">
        <div>
            <div class="form-group">
                <label>头像：</label>
                <img src="~/Content/icon/@Model.UserPicture" style="width:80px;height:80px" class="img-thumbnail"/>
                <input type="file" class="form-control-fil" id="UserPicture" name="UserPicture">
            </div>
            <div class="form-group">
                <label class="">用户名：</label>
                <input type="text" class="form-control" value="@Model.UserName" />
            </div>
            <div class="form-group">
                <label>登录账户：</label>
                <input type="text" class="form-control" value="@Model.LoginName" />
            </div>
            <div class="form-group">
                <label>邮箱：</label>
                <input type="text" class="form-control" value="@Model.E_mail" />
            </div>
            <div class="form-group">
                <label>性别：</label>
                <input type="checkbox" id="UserSex" name="UserSex" value="1" checked="@(Convert.ToInt32(Model.UserSex)==1)"/>男
                <input type="checkbox" id="UserSex" name="UserSex" value="2" checked="@(Convert.ToInt32(Model.UserSex)==2)"/>女
            </div>
            <div class="form-group">
                <label>个性签名(限250字)：</label>
                <textarea class="form-control" id="Userdescribe" name="Userdescribe" rows="3">@Model.Userdescribe</textarea>
            </div>
            <div>
                <a href="/User/EidtInfo" class="btn btn-info">重置</a>
                <input type="submit" class="btn btn-primary" value="保存"/>
            </div>
        </div>
    </form>


